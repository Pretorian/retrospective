base-color = #535353
accent = #3498db
font-stack = 'Source Sans Pro', sans-serif
blue = #3498db
light-blue = #2980b9

transition(props)
  -webkit-transition props
  -moz-transition props
  -o-transition props
  transition props

*
  margin 0
  padding 0
  box-sizing border-box
  -webkit-box-sizing border-box
  -moz-box-sizing border-box

.hidden
  display none

body
  font-family font-stack
  font-size 16px
  line-height 1.35
  font-weight 200
  color base-color
  background #ecf0f1

.top-nav
  background blue
  h1
    float left
    background light-blue
    color white
    font-weight 200
    display inline-block
    padding 0.75rem
    span
      opacity 0.6
  h2
    color white
    font-weight 400
    line-height 67px
    margin-left 88px
    padding-left 1em

.clearfix
  clear both

.card
  padding 1em
  .card-content
      padding 1em
      background white
      box-shadow 0 1px 5px rgba(0, 0, 0, 0.1)

.cols
  .col
    float left
    width 33%

.container
  .content
    max-width 960px
    margin 3em auto

.text-center
  text-align center
